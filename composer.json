{
    "name": "adamgaskins/gumwrapper",
    "description": "A php wrapper for Gum: a tool for glamorous shell scripts ðŸŽ€",
    "keywords": [
        "AdamGaskins",
        "gum",
        "gumwrapper"
    ],
    "homepage": "https://github.com/adamgaskins/gumwrapper",
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Gaskins",
            "email": "adam@gaskins.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "pestphp/pest-plugin-mock": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "GumWrapper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GumWrapper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "post-install-cmd": [
            "GumWrapper\\BinManager::installBinary"
        ],
        "post-update-cmd": [
            "GumWrapper\\BinManager::installBinary"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
